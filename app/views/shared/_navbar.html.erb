<div class="navbar-antiquities">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-antiquities-brand" do %>
    <%= image_tag "alogo.svg", height: 50 %>
  <% end %>


  <!-- Right Navigation -->
  <div class="navbar-antiquities-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Rent an Artifact", "#", class: "navbar-antiquities-item navbar-antiquities-link" %>
      <%= link_to "Rent out your Artifact", "#", class: "navbar-antiquities-item navbar-antiquities-link" %>
      <%= link_to "Messages", "#", class: "navbar-antiquities-item navbar-antiquities-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-antiquities-item">
        <div class="dropdown">
          <%= image_tag user_photo, class: "avatar dropdown-toggle", id: "navbar-antiquities-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-antiquities-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".dashboard", default: "Dashboard") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <% #raise %>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-antiquities-item navbar-antiquities-link" %>
      <%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path, class: "navbar-antiquities-item navbar-antiquities-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-antiquities-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-antiquities-dropdown-menu">
        <li><%= link_to 'My Dashboard', dashboard_path %></li>
        <li><%= link_to 'Artifacts for Rent', artifacts_path %></li>
        <li><%= link_to 'Rent out a New Artifact', new_artifact_path %></li>
        <li><%= link_to 'Login', new_user_session_path %></li>
        <li><%= link_to 'Contact Seller', contacts_path %></li>
        <li><%= link_to 'Sign Out', destroy_user_session_path %></li>
      </ul>
    </div>
  </div>
</div>
