<div class="show-layout">
  <div class="show-layout-column">
    <%= image_tag(@artifact.photo, class: "show-layout-img")%>
  </div>
  <div class="show-layout-column">
    <h1><%= @artifact.name %></h1>
    <h4>$<%= @artifact.price %> /day</h4>
    <% if user_signed_in? %>
      <div class="col-xs-12 col-sm-6 col-sm-offset-1" style="outline:red dotted 1px;">
        <%= render 'shared/booking_form' %>
      </div>
    <% else %>
      <%= flash[:danger] = "Please log in." %>
    <% end %>
  </div>
</div>

